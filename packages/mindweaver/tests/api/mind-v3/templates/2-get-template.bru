meta {
  name: Get Template
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/mind.v3.TemplatesService/GetTemplate
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "id": {{templateId}}
  }
}

tests {
  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response has correct template ID", function() {
    expect(res.body.name).to.include(bru.getEnvVar("templateId"));
  });
  
  test("Template has name field", function() {
    expect(res.body).to.have.property("name");
  });
}
